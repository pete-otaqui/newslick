<!doctype html>
<html lang="en">
    <head>
        <title>newslick</title>
        <link rel="stylesheet" href="stylesheets/newslick.css" />
        <meta name="viewport" content="width=device-width">
    </head>
    <body>
        <div class="root">
            <header>
                <h1>newslick</h1>
                <nav>
                    <ul>
                        <li><a href="http://otaqui.com/">built by pete otaqui</a></li>
                    </ul>
                </nav>
            </header>
            <section class="stories">
                <% stories.forEach(function(story, index) { %>
                    <% klass = (index === 0) ? 'active' : ''; %>
                    <article class="story <%=klass%>" data-href="<%= story.href %>" style="background-image:url(<%= story.image %>)">
                        <div class="text">
                            <h2><%= story.title %></h2>
                            <p class="body"><%= story.body %></p>
                            <p class="link"><a href="<%= story.href %>">Read More</a></p>
                        </div>
                    </article>
                <% }); %>
            </section>
            <footer>

            </footer>
        </div><!-- .root -->
        <script src="javascripts/newslick.js"></script>
        <script>
            setTimeout(function() {
                document.location.href = document.location.href;
            }, <%= refresh_rate %>);
        </script>

        <script>
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

          ga('create', 'UA-618306-9', 'newslick.herokuapp.com');
          ga('send', 'pageview');

        </script>
    </body>
</html>